# Netlify Global Headers
# HTTPS ve güvenlik zorlaması

/*
  # HTTPS Güvenlik Headers
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  
  # Content Security Policy - Genişletilmiş
  Content-Security-Policy: default-src 'self' https: data:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.gstatic.com https://apis.google.com https://*.firebaseapp.com https://*.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob: https://upload.wikimedia.org https://images.unsplash.com https://*.unsplash.com https://commons.wikimedia.org https://*.wikipedia.org; media-src 'self' https: data: blob:; connect-src 'self' https://*.googleapis.com https://*.firebaseio.com wss://*.firebaseio.com https://*.firebaseapp.com https://firestore.googleapis.com wss://firestore.googleapis.com https://firebase.googleapis.com https://securetoken.googleapis.com
  
  # Cache Control
  Cache-Control: public, max-age=0, must-revalidate

# Static dosyalar için cache
/static/*
  Cache-Control: public, max-age=31536000, immutable

# CSS dosyaları için cache
/style.css
  Cache-Control: public, max-age=604800

/font-awesome-minimal.css
  Cache-Control: public, max-age=604800

/admin-pending-styles.css
  Cache-Control: public, max-age=604800

# JS dosyaları için cache ve güvenlik
/script.js
  Cache-Control: public, max-age=604800
  X-Content-Type-Options: nosniff
  X-Robots-Tag: noindex

/online-game.js
  Cache-Control: public, max-age=604800
  X-Content-Type-Options: nosniff
  X-Robots-Tag: noindex

/auth.js
  Cache-Control: public, max-age=604800
  X-Content-Type-Options: nosniff
  X-Robots-Tag: noindex

/firebase-config.js
  Cache-Control: public, max-age=604800
  X-Content-Type-Options: nosniff
  X-Robots-Tag: noindex

/production-security.js
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff
  X-Robots-Tag: noindex

# HTML dosyaları - cache yok
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# API endpoints
/api/*
