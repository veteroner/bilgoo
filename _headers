# Netlify Global Headers
# HTTPS ve güvenlik zorlaması

/*
  # HTTPS Güvenlik Headers
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.gstatic.com https://apis.google.com https://*.firebaseapp.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.googleapis.com https://*.firebaseio.com wss://*.firebaseio.com https://*.firebaseapp.com
  
  # Cache Control
  Cache-Control: public, max-age=0, must-revalidate

# Static dosyalar için cache
/static/*
  Cache-Control: public, max-age=31536000, immutable

# CSS dosyaları için cache
/style.css
  Cache-Control: public, max-age=604800

/font-awesome-minimal.css
  Cache-Control: public, max-age=604800

/admin-pending-styles.css
  Cache-Control: public, max-age=604800

# HTML dosyaları - cache yok
*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# API endpoints
/api/*
  Access-Control-Allow-Origin: https://bilgoov3.netlify.app
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization 