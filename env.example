# 🔒 ENVIRONMENT VARIABLES ÖRNEK DOSYASI
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun

# 🚀 Server Konfigürasyonu
NODE_ENV=production
PORT=3000
HTTPS_PORT=443

# 🔑 Firebase Konfigürasyonu (Production)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=1:your_sender_id:web:your_app_id
FIREBASE_MEASUREMENT_ID=G-YOUR_MEASUREMENT_ID

# 🔒 SSL Sertifikaları
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# 🛡️ Güvenlik Ayarları
SECURITY_SECRET=your_super_secret_key_here_32_chars_minimum
MASTER_KEY=your_master_encryption_key_64_chars_minimum

# 📊 Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 🔑 API Key Ayarları
API_KEY_PREFIX=pk_
API_KEY_LENGTH=64

# 📝 Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
SECURITY_LOG_PATH=./logs/security.log

# 🌐 CORS Ayarları
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 📧 E-posta Konfigürasyonu (Güvenlik uyarıları için)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SECURITY_EMAIL=security@yourdomain.com

# ⚡ Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600

# 🔍 Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ⚠️ UYARI:
# - Bu dosyayı asla git'e commit etmeyin!
# - Production'da güçlü şifreler kullanın
# - API anahtarlarını düzenli olarak rotasyon yapın
# - Şifreleri güvenli bir password manager'da saklayın 